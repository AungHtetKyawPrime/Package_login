<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_background"
    tools:context=".Sign_up">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/logo_image"
        android:src="@drawable/logo"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fill your information to Signup"
        android:layout_marginTop="20dp"
        android:id="@+id/fill_info_text"
        android:layout_below="@+id/logo_image"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="390dp"
        android:id="@+id/textInputLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:layout_below="@+id/fill_info_text"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="5dp"
            android:background="@drawable/rounded_textbox"
            android:hint="User Name "
            android:id="@+id/user_name"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="5dp"
            android:hint="Email "
            android:layout_marginTop="-1dp"
            android:id="@+id/user_email"
            android:background="@drawable/style_textbox"
            android:inputType="textEmailAddress"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="5dp"
            android:hint="Phone No "
            android:layout_marginTop="-1dp"
            android:id="@+id/Phone_no"
            android:background="@drawable/style_textbox"
            android:inputType="phone"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="5dp"
            android:hint="Password "
            android:layout_marginTop="-1dp"
            android:id="@+id/user_password_sign_up"
            android:background="@drawable/style_textbox"
            android:inputType="textPassword"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="5dp"
            android:hint="Confirm Password "
            android:layout_marginTop="-1dp"
            android:id="@+id/user_login"
            android:background="@drawable/style_textbox"
            android:inputType="textPassword"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:textColor="#fff"
                android:id="@+id/login"
                android:text="Signup"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Other ways to Signup Us ."
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fackbook_icon"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-60dp"
                android:src="@drawable/instargram_icon"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-60dp"
                android:src="@drawable/twitter_icon"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-50dp"
                android:src="@drawable/gmail_icon"/>
        </LinearLayout>

    </LinearLayout>

        <TextView
            android:id="@+id/no_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textInputLayout"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Already have an account?" />
    <View
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/no_account"
        android:id="@+id/view_no_acc"
        android:layout_marginTop="10dp"
        android:background="#ded8d8"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:layout_below="@+id/view_no_acc"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:id="@+id/sign_up"
        android:layout_marginBottom="10dp"
        android:textColor="#ed21a9"/>
    </RelativeLayout>
</ScrollView>